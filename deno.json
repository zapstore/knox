{
  "tasks": {
    "knox": "deno run -A src/main.ts",
    "compile": "deno compile -A -o knox src/main.ts",
    "test": "deno test -A",
    "debug": "deno run -A scripts/debug.ts"
  },
  "imports": {
    "@commander-js/extra-typings": "npm:@commander-js/extra-typings@^12.1.0",
    "@noble/ciphers": "npm:@noble/ciphers@^1.0.0",
    "@noble/hashes": "npm:@noble/hashes@^1.5.0",
    "@nostrify/nostrify": "jsr:@nostrify/nostrify@^0.36.1",
    "@scure/base": "npm:@scure/base@^1.1.9",
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.6",
    "chalk": "npm:chalk@^5.3.0",
    "nostr-tools": "npm:nostr-tools@^2.10.1",
    "zod": "npm:zod@^3.23.8"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
